{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "module": "amd",
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outFile": "plugin.js"
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "filesGlob": [
        "../typings/**/*.ts",
        "../plugin/**/*.ts"
    ],
    "exclude": [
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
